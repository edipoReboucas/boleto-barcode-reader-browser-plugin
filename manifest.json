{
  "name": "LeitorBoleto",
  "version": "0.1.1",
  "description": "Leitor de Código de Barras para Boletos",
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "libs/javascript-barcode-reader.min.js",
      "modules/events.js",
      "modules/barcode.js",
      "scripts/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Ler Código de Barras"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "manifest_version": 2
}
